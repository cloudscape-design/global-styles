{
  "name": "@cloudscape-design/global-styles",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudscape-design/global-styles.git"
  },
  "homepage": "https://cloudscape.design",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./index.js",
  "exports": {
    ".": "./index.js",
    "./dark-mode-utils.css": "./dark-mode-utils.css",
    "./index.css": "./index.css"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "*.css",
    "THIRD-PARTY-LICENSES.txt"
  ],
  "scripts": {
    "prepare": "husky",
    "prebuild": "rm -rf lib && mkdir lib",
    "build": "node postcss.js && tsc",
    "postbuild": "cp dark-mode-utils.css package.json THIRD-PARTY-LICENSES.txt LICENSE README.md lib",
    "lint": "eslint .",
    "test": "vitest --run"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.20.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@vitest/coverage-istanbul": "^3.0.6",
    "eslint": "^9.20.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unicorn": "^57.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "normalize.css": "^8.0.1",
    "postcss": "^8.5.2",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
